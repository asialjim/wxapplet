}

/* 统一弹窗样式 */
.mask-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  animation: popIn 0.3s ease-out;
}

/* 弹窗弹出动画 */
@keyframes popIn {
  0% {
    opacity: 0;
    transform: scale(0.9) translateY(20rpx);
  }
  80% {
    opacity: 1;
    transform: scale(1.02) translateY(0);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 统一弹窗内容区域样式 */
.mask-content .form-content {
  padding: 36rpx 30rpx;
  background-color: #fafafa;
}

/* 统一弹窗标题样式 */
.mask-content .form-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #e0e0e0;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  position: relative;
}

/* 统一弹窗底部按钮样式 */
.mask-content .form-buttons {
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
}

/* 关闭按钮的特殊样式 */
.mask-content .form-buttons button {
  border-radius: 0;
  position: relative;
  overflow: hidden;
}

/* 实名认证表单项目样式 */
