/* 证件信息展示样式 */
.info-item {
  display: flex;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-label {
  width: 30%;
  color: #666;
  flex-shrink: 0;
