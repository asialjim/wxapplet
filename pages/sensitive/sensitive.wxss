/* sensitive.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
  min-height: 100vh;
  position: relative;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.test-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.test-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}

.test-subheader {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 15rpx;
}

.test-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.test-label {
  font-size: 28rpx;
  color: #666;
  width: 260rpx;
  word-break: break-all;
}

.test-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}